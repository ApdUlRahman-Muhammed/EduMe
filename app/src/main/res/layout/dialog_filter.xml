<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr">

    <TextView
        android:id="@+id/select_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select City"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        />
    <Spinner
        android:id="@+id/sp_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/select_city"
        />
    <TextView
    android:id="@+id/select_level"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
    android:text="Select Level"
    android:textSize="16sp"
    android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/sp_city"

        />
    <Spinner
        android:id="@+id/sp_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/select_level"
        />
    <TextView
        android:id="@+id/select_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="price_value"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/sp_level"

        />
    <Spinner
        android:id="@+id/sp_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/select_price"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Submit"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/sp_price"
        app:layout_constraintRight_toLeftOf="parent"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Cancle"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/sp_price"
        app:layout_constraintRight_toLeftOf="@id/submit"
        />

</android.support.constraint.ConstraintLayout>