<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"

    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:background="#bac7c6"
        android:layout_marginTop="10dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#bac7c6"
            android:padding="5dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mass_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/pro"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"/>
            <TextView
                android:id="@+id/mass_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mohamed salah "
                android:layout_gravity="center"
                app:layout_constraintLeft_toRightOf="@+id/mass_image"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/masscont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="massage content"
                android:layout_gravity="center"
                app:layout_constraintLeft_toRightOf="@+id/mass_image"
                app:layout_constraintTop_toBottomOf="@+id/mass_name"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="#000"
                />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>